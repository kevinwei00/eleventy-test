<section class="page-section {{ content.classes }}">
  <div class="container">
    <div class="title-block">
      <h2>{{ content.title | safe }}</h2>
      <p class="lead">{{ content.text | safe }}</p>
    </div>
  </div>
</section>

{% macro fields(class, title, text) %}
<section class="page-section {{ classes }}">
  <div class="container">
    <div class="title-block">
      <h2>{{ title | safe }}</h2>
      <p class="lead">{{ text | safe }}</p>
    </div>
  </div>
</section>
{% endmacro %}